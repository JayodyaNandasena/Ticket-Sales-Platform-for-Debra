@page
@model Debra_WebClient.Pages.ViewEventModel
@{
    var eventDate = Model._event.Date.ToDateTime(TimeOnly.MinValue); // Convert DateOnly to DateTime
    var formattedDate = eventDate.ToString("dddd, MMMM d'th', yyyy"); // Format date
    var startTime = Model._event.StartTime.ToString("h:mm tt"); // Format time
}

<div class="container-fluid text-light p-0">

    <!-- Hero Section -->
    <div class="cover-container d-flex w-100 h-100 p-5 mx-auto flex-column text-center">
        <h1 class="display-4 mt-5">@Model._event.Title</h1>
        <p class="lead">@Model._event.Description</p>
        <p class="lead mt-4">
            <a href="#" class="btn btn-lg btn-light fw-bold border-dark bg-light">Buy Tickets</a>
        </p>
    </div>

    <!-- Performers Section -->
    <div class="container my-5">
        <h2 class="text-center mb-4">The Rocking Performers</h2>
        <div class="row text-center">
            @if (Model._event.Musicians.Any())
            {
                @foreach (var musician in Model._event.Musicians)
                {
                    <div class="col-md-3 mb-4">
                        <img src="~/img/singer2.png" alt="@musician.Name" class="img-fluid mb-2" style="max-width: 150px; height: 200px;">
                        <h5>@musician.Name</h5>
                    </div>
                }
            }
            @if (Model._event.Bands.Any())
            {
                @foreach (var band in Model._event.Bands)
                {
                    <div class="col-md-3 mb-4">
                        <img src="~/img/band.png" alt="@band.Name" class="img-fluid mb-2" style="max-width: 500px; height: 200px;">
                        <h5>@band.Name</h5>
                    </div>
                }
            }
        </div>
    </div>

    <!-- About Event Section -->
    <div class="container my-5">
        <h2 class="text-center mb-4">About Event</h2>
        <p class="text-center">@Model._event.Description</p>
    </div>

    <!-- Event Details Section -->
    <div class="container my-5 text-center">
        <p>@formattedDate at @startTime (GMT+5:30)</p>
        <p>Contact the Organizer via <a href="mailto:@Model._event.Partner.Email" class="text-light">@Model._event.Partner.Email</a></p>
        <p class="lead mt-4">
            <a href="#" class="btn btn-lg btn-light fw-bold border-dark bg-light">Buy Tickets</a>
        </p>
    </div>

</div>
