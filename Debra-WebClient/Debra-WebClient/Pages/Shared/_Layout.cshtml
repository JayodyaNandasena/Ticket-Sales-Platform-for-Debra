<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Debra_WebClient</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Debra_WebClient.styles.css" asp-append-version="true" />
</head>
<body class="bg-black">
	<header class="bg-transparent">
		<nav class="navbar bg-transparent navbar-expand-sm navbar-toggleable-sm px-5" data-bs-theme="dark">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-page="/Index" data-bs-theme="dark">Debra</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-page="/Index">Schedule</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-page="/Privacy">Tickets</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-page="/Privacy">About Us</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-page="/Privacy">Contact Us</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-page="/Privacy">Login</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container-fluid render-body">
		<main role="main" class="pb-3 px-0">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container-fluid">
			&copy; 2024 - Debra_WebClient - <a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>